<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <!--  <secured attributes="ROLE_USER" /> -->

    <on-start>
        <evaluate expression="liveActivityGroupAction.newLiveActivityGroup()" result="flowScope.liveActivityGroupForm" />
        <evaluate expression="new java.util.Date()" result="flowScope.now" />
    </on-start>
    
    <view-state id="newLiveActivityGroup" model="liveActivityGroupForm" view="liveactivitygroup/LiveActivityGroupNew">
        <on-render>
            <evaluate expression="liveActivityGroupAction.addNeededEntities(flowRequestContext)" />
        </on-render>
        <transition on="save" to="saveNewLiveActivityGroup" validate="true" />
        <transition on="cancel" to="cancel" bind="false" />
    </view-state>

  <action-state id="saveNewLiveActivityGroup">
    <evaluate expression="liveActivityGroupAction.saveLiveActivityGroup(liveActivityGroupForm)" />
    <transition on="success" to="doneNewLiveActivityGroup" />
    <transition on="error" to="newLiveActivityGroup" />
  </action-state>
    
    <end-state id="doneNewLiveActivityGroup" view="externalRedirect:contextRelative:/liveactivitygroup/#{liveActivityGroupForm.liveActivityGroup.id}/view.html">
      <output name="liveActivityGroupId" value="liveActivityGroupForm.liveActivityGroup.id" />
    </end-state>

    <end-state id="cancel" />

</flow>