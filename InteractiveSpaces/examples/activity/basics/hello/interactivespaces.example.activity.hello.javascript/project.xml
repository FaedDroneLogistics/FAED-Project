<?xml version="1.0"?>
<project type="activity">
  <name>Simple Hello World Activity Example in Javascript</name>
  <description>
    A very simple Javascript-based activity that just logs at the current log level its
    callback messages.
  </description>

  <identifyingName>
    interactivespaces.example.activity.hello.javascript
  </identifyingName>
  <version>1.0.0</version>

  <activity type="script">
    <name>interactivespacesExampleActivityHelloJavascript</name>
    <executable>HelloActivity.js</executable>

    <configuration>
      <property name="space.activity.log.level" value="info" />
    </configuration>
  </activity>
</project>
